<Window
    x:Class="UniversalDataCollector.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="通用数据采集器 (Universal Data Collector)"
    Width="1200"
    Height="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Padding="10"
            Background="#F0F0F0">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <Button
                        Height="30"
                        Margin="0,0,10,0"
                        Padding="10,0"
                        BorderBrush="#007ACC"
                        Command="{Binding OpenMonitorSettingsCommand}"
                        Content="📂 数据源设置 (采集地址)"
                        FontWeight="Bold" />

                    <Button
                        Height="30"
                        Padding="10,0"
                        BorderBrush="#CA5100"
                        Command="{Binding OpenMesSettingsCommand}"
                        Content="☁️ MES接口设置"
                        FontWeight="Bold" />
                </StackPanel>

                <StackPanel
                    VerticalAlignment="Center"
                    DockPanel.Dock="Right"
                    Orientation="Horizontal">
                    <TextBlock FontWeight="Bold" Text="当前状态: " />
                    <TextBlock
                        Margin="5,0,0,0"
                        Foreground="Blue"
                        Text="{Binding StatusText}" />
                </StackPanel>
            </DockPanel>
        </Border>

        <GroupBox
            Grid.Row="1"
            Margin="5"
            Header="已上传数据监控">
            <DataGrid
                AlternatingRowBackground="#F8F8F8"
                AutoGenerateColumns="True"
                CanUserAddRows="False"
                GridLinesVisibility="All"
                HeadersVisibility="Column"
                IsReadOnly="True"
                ItemsSource="{Binding GridData}" />
        </GroupBox>

        <GridSplitter
            Grid.Row="2"
            Height="5"
            HorizontalAlignment="Stretch"
            Background="LightGray" />

        <GroupBox
            Grid.Row="3"
            Margin="5"
            Header="运行日志">
            <ListBox
                FontFamily="Consolas"
                FontSize="12"
                ItemsSource="{Binding Logs}" />
        </GroupBox>
    </Grid>
</Window>