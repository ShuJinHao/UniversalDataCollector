<Window
    x:Class="UniversalDataCollector.Views.MesSettingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:vm="clr-namespace:UniversalDataCollector.ViewModels"
    Title="MES接口配置"
    Width="800"
    Height="600"
    Background="#F0F0F0"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:MesSettingViewModel />
    </Window.DataContext>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox
            Grid.Row="0"
            Margin="0,0,0,10"
            Padding="10"
            Background="White"
            Header="接口设置">
            <DockPanel>
                <TextBlock
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Text="MES 上传地址:" />
                <TextBox
                    Height="28"
                    VerticalContentAlignment="Center"
                    Text="{Binding MesApiUrl, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>
        </GroupBox>

        <GroupBox
            Grid.Row="1"
            Padding="5"
            Background="White"
            Header="字段映射配置">
            <DataGrid
                AutoGenerateColumns="False"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                CanUserAddRows="False"
                GridLinesVisibility="Horizontal"
                ItemsSource="{Binding Mappings}"
                RowHeaderWidth="0"
                SelectedItem="{Binding SelectedMapping}">
                <DataGrid.Columns>

                    <DataGridTextColumn
                        Width="140"
                        Binding="{Binding MesFieldName}"
                        Header="MES字段 (可嵌套: dcr.list1)" />

                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding ColumnIndex}"
                        Header="列索引" />

                    <DataGridComboBoxColumn
                        Width="110"
                        Header="数据类型"
                        SelectedValueBinding="{Binding DataType}">
                        <DataGridComboBoxColumn.ItemsSource>
                            <x:Array Type="{x:Type sys:String}">
                                <sys:String>String</sys:String>
                                <sys:String>Int</sys:String>
                                <sys:String>Double</sys:String>
                                <sys:String>DoubleArray</sys:String>
                                <sys:String>DateTime</sys:String>
                                <sys:String>Bool</sys:String>
                                <sys:String>TemplateFile</sys:String>
                            </x:Array>
                        </DataGridComboBoxColumn.ItemsSource>
                    </DataGridComboBoxColumn>

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding ExtractionRule}"
                        Header="正则提取规则 (Group[1])" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <StackPanel
            Grid.Row="2"
            Margin="0,15,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Height="30"
                Margin="0,0,10,0"
                Background="White"
                Command="{Binding AddCommand}"
                Content="➕ 新增字段" />
            <Button
                Width="100"
                Height="30"
                Margin="0,0,10,0"
                Background="White"
                Command="{Binding DeleteCommand}"
                Content="➖ 删除选中"
                Foreground="#D32F2F" />
            <Button
                Width="100"
                Height="30"
                Background="#4CAF50"
                Command="{Binding SaveCommand}"
                Content="💾 保存配置"
                FontWeight="Bold"
                Foreground="White" />
        </StackPanel>
    </Grid>
</Window>